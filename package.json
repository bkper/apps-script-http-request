{
  "name": "@bkper/http-request-app",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf build && rimraf dist",
    "login": "clasp login",
    "open": "clasp open",
    "pull": "clasp pull",
    "push": "clasp push",
    "start": "yarn push --watch",
    "test": "run-s test:*",
    "test:bundle": "tsc -p tsconfig.test.json --outFile build/test-bundle.js",
    "test:run": "mocha --require source-map-support/register build/test-bundle.js",
    "build": "yarn && yarn clean && yarn test && run-s build:*",
    "build:js": "tsc --outFile dist/HttpRequestApp.js",
    "build:types": "yarn clasp-types",
    "patch": "yarn version --patch",
    "minor": "yarn version --minor",
    "major": "yarn version --major",
    "preversion": "yarn build && yarn push",
    "publish-types": "yarn --cwd dist/@bkper/http-request-app publish --access public",
    "postversion": "clasp version $npm_package_version && git push && git push --tags && yarn publish-types"
  },
  "devDependencies": {
    "@google/clasp": "^2.3.0",
    "@types/chai": "^4.2.11",
    "@types/google-apps-script": "^1.0.13",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "chai": "^4.2.0",
    "clasp-types": "^1.1.7",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19"
  }
}
